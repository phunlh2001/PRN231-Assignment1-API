@model BusinessObject.Object.Customer

@{
    ViewData["Title"] = "Create Page";
}

<form method="post" action="add">
    Id: <input type="text" asp-for="Id" class="form-control" />
    <span asp-validation-for="Id" class="text-danger"></span> <br />

    Full Name: <input type="text" asp-for="Fullname" class="form-control" />
    <span asp-validation-for="Fullname" class="text-danger"></span> <br />

    Birthday: <input type="date" asp-for="Birthday" class="form-control" />
    <span asp-validation-for="Birthday" class="text-danger"></span> <br />

    Gender: 
    <div class="form-check">
      <input class="form-check-input" type="radio" name="gender" id="Male" value=true checked>
      <label class="form-check-label" for="Male">
        Male
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="gender" id="Female" value=false>
      <label class="form-check-label" for="Female">
        Female
      </label>
    </div>
    <br />

    Phone Number: <input type="text" asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span> <br />

    Email: <input type="email" asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span> <br />

    Point: <input type="text" asp-for="Points" class="form-control" />
    <span asp-validation-for="Points" class="text-danger"></span> <br />

    Type of Customer: 
    <select asp-for="TypeId" class ="form-control" asp-items="ViewBag.type"></select>
    <br />

    <input type="submit" value="Submit" class="btn btn-success" />
    <a href="/customer" class="btn btn-outline-primary">Back</a>
</form>